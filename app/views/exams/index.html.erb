<p id="notice"><%= notice %></p>

<h1>Online Examination</h1>

<table class="striped">
  <thead>
    <tr>
      <th style="width:50%">Name</th>
      <th style="width:20%">Questions count</th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.name %></td>
        <td><%= exam.questions_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exam', new_exam_path,:class=>"waves-effect waves-light btn" %>
