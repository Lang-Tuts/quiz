<h1><%=@question.description%></h1>
<%@answers.shuffle.each do |t| %>
    <% if t.actual_answer == 1 %>
    <p>
        <input type="checkbox"  checked="checked" />
        <label style="color:red"><%= t.content %></label>
        </p>
    <% else %>
    <p>
        <input type="checkbox" checked="checked" disabled="disabled" />
        <label style="color:green"><%= t.content %></label>
        </p>
    <% end %>
<% end %>
